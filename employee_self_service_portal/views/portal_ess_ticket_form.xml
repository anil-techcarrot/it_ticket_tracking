<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Tickets List View -->
    <template id="portal_my_tickets" name="My IT Tickets">
        <t t-call="portal.portal_layout">
            <div class="o_portal container my-4">

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/my/ess"><i class="fa fa-tachometer"></i> Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">My IT Tickets</li>
                    </ol>
                </nav>

                <!-- Header -->
                <div class="row align-items-center mb-4">
                    <div class="col-md-8">
                        <h2 class="mb-1">
                            <i class="fa fa-ticket text-danger me-2"></i>
                            My IT Support Tickets
                        </h2>
                        <p class="text-muted mb-0">
                            View and track all your IT support requests
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="/my/ess/tickets/new" class="btn btn-danger">
                            <i class="fa fa-plus"></i> Create New Ticket
                        </a>
                    </div>
                </div>

                <!-- Search and Filter Bar -->
                <div class="card border-0 shadow-sm mb-4">
                    <div class="card-body">
                        <div class="row">
                            <!-- Sort By -->
                            <div class="col-md-6 mb-2">
                                <label class="form-label small text-muted">Sort By:</label>
                                <div class="btn-group w-100" role="group">
                                    <t t-foreach="searchbar_sortings.items()" t-as="sort_item">
                                        <t t-set="sort_key" t-value="sort_item[0]"/>
                                        <t t-set="sort_val" t-value="sort_item[1]"/>
                                        <a t-att-href="'/my/tickets?sortby=' + sort_key + '&amp;filterby=' + filterby"
                                           t-attf-class="btn btn-sm #{sortby == sort_key and 'btn-primary' or 'btn-outline-secondary'}">
                                            <t t-esc="sort_val['label']"/>
                                        </a>
                                    </t>
                                </div>
                            </div>

                            <!-- Filter By -->
                            <div class="col-md-6 mb-2">
                                <label class="form-label small text-muted">Filter By Status:</label>
                                <select class="form-select form-select-sm"
                                        onchange="window.location.href='/my/tickets?sortby=' + this.dataset.sortby + '&amp;filterby=' + this.value"
                                        t-att-data-sortby="sortby">
                                    <t t-foreach="searchbar_filters.items()" t-as="filter_item">
                                        <t t-set="filter_key" t-value="filter_item[0]"/>
                                        <t t-set="filter_val" t-value="filter_item[1]"/>
                                        <option t-att-value="filter_key"
                                                t-att-selected="'selected' if filterby == filter_key else None">
                                            <t t-esc="filter_val['label']"/>
                                        </option>
                                    </t>
                                </select>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Tickets List -->
                <t t-if="tickets">
                    <div class="row">
                        <t t-foreach="tickets" t-as="ticket">
                            <div class="col-md-6 mb-4">
                                <div class="card border-0 shadow-sm h-100">
                                    <div class="card-body">
                                        <!-- Ticket Header -->
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <div>
                                                <h5 class="mb-1">
                                                    <a t-attf-href="/my/tickets/{{ticket.id}}" class="text-decoration-none">
                                                        <t t-esc="ticket.name"/>
                                                    </a>
                                                </h5>
                                                <p class="text-muted mb-0 small">
                                                    <t t-esc="ticket.subject"/>
                                                </p>
                                            </div>
                                            <!-- State Badge -->
                                            <span t-attf-class="badge bg-{{
                                                'success' if ticket.state == 'done' else
                                                'danger' if ticket.state == 'rejected' else
                                                'warning' if ticket.state in ['manager_approval','it_approval'] else
                                                'info' if ticket.state in ['assigned','in_progress'] else
                                                'secondary'
                                            }}">
                                                <t t-esc="dict(ticket._fields['state'].selection).get(ticket.state)"/>
                                            </span>
                                        </div>

                                        <!-- Ticket Details -->
                                        <div class="row g-2 mb-3">
                                            <div class="col-6">
                                                <small class="text-muted d-block">Type:</small>
                                                <span class="badge bg-light text-dark">
                                                    <t t-esc="dict(ticket._fields['ticket_type'].selection).get(ticket.ticket_type)"/>
                                                </span>
                                            </div>
                                            <div class="col-6">
                                                <small class="text-muted d-block">Priority:</small>
                                                <span t-attf-class="badge bg-{{
                                                    'danger' if ticket.priority == '3' else
                                                    'warning' if ticket.priority == '2' else
                                                    'info' if ticket.priority == '1' else
                                                    'secondary'
                                                }}">
                                                    <t t-esc="dict(ticket._fields['priority'].selection).get(ticket.priority)"/>
                                                </span>
                                            </div>
                                            <div class="col-12">
                                                <small class="text-muted d-block">Created:</small>
                                                <small>
                                                    <i class="fa fa-clock-o me-1"></i>
                                                    <t t-esc="ticket.create_date.strftime('%Y-%m-%d %H:%M')"/>
                                                </small>
                                            </div>
                                        </div>

                                        <!-- Action Button -->
                                        <a t-attf-href="/my/tickets/{{ticket.id}}" class="btn btn-outline-primary btn-sm w-100">
                                            <i class="fa fa-eye"></i> View Details
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </div>

                    <!-- Pager -->
                    <t t-call="portal.pager"/>
                </t>

                <!-- Empty State -->
                <t t-else="">
                    <div class="card border-0 shadow-sm">
                        <div class="card-body text-center py-5">
                            <i class="fa fa-ticket fa-3x text-muted mb-3"></i>
                            <h4 class="text-muted mb-3">No Tickets Found</h4>
                            <p class="text-muted mb-4">
                                You haven't created any IT support tickets yet.
                            </p>
                            <a href="/my/ess/tickets/new" class="btn btn-danger">
                                <i class="fa fa-plus"></i> Create Your First Ticket
                            </a>
                        </div>
                    </div>
                </t>

            </div>
        </t>
    </template>


    <!-- Single Ticket Detail View -->
    <template id="portal_my_ticket_detail" name="IT Ticket Detail">
        <t t-call="portal.portal_layout">
            <div class="o_portal container my-4">

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/my/ess"><i class="fa fa-tachometer"></i> Dashboard</a>
                        </li>
                        <li class="breadcrumb-item">
                            <a href="/my/tickets"><i class="fa fa-ticket"></i> My Tickets</a>
                        </li>
                        <li class="breadcrumb-item active" t-esc="ticket.name"/>
                    </ol>
                </nav>

                <!-- Ticket Header -->
                <div class="row align-items-center mb-4">
                    <div class="col-md-8">
                        <h2 class="mb-1">
                            <i class="fa fa-ticket text-danger me-2"></i>
                            <t t-esc="ticket.name"/>
                        </h2>
                        <p class="text-muted mb-0" t-esc="ticket.subject"/>
                    </div>
                    <div class="col-md-4 text-end">
                        <span t-attf-class="badge bg-{{
                            'success' if ticket.state == 'done' else
                            'danger' if ticket.state == 'rejected' else
                            'warning' if ticket.state in ['manager_approval','it_approval'] else
                            'info' if ticket.state in ['assigned','in_progress'] else
                            'secondary'
                        }} fs-5 px-3 py-2">
                            <t t-esc="dict(ticket._fields['state'].selection).get(ticket.state)"/>
                        </span>
                    </div>
                </div>

                <div class="row">
                    <!-- Main Content -->
                    <div class="col-lg-8">
                        <!-- Ticket Details Card -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-transparent border-0">
                                <h5 class="mb-0">
                                    <i class="fa fa-info-circle text-primary me-2"></i>
                                    Ticket Details
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="row g-3">
                                    <div class="col-md-6">
                                        <label class="text-muted small">Ticket Type</label>
                                        <p class="mb-0">
                                            <t t-esc="dict(ticket._fields['ticket_type'].selection).get(ticket.ticket_type)"/>
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="text-muted small">Priority</label>
                                        <p class="mb-0">
                                            <span t-attf-class="badge bg-{{
                                                'danger' if ticket.priority == '3' else
                                                'warning' if ticket.priority == '2' else
                                                'info' if ticket.priority == '1' else
                                                'secondary'
                                            }}">
                                                <t t-esc="dict(ticket._fields['priority'].selection).get(ticket.priority)"/>
                                            </span>
                                        </p>
                                    </div>
                                    <div class="col-md-6">
                                        <label class="text-muted small">Submitted Date</label>
                                        <p class="mb-0">
                                            <i class="fa fa-calendar me-1"></i>
                                            <t t-esc="ticket.submitted_date.strftime('%Y-%m-%d %H:%M') if ticket.submitted_date else 'Not submitted yet'"/>
                                        </p>
                                    </div>
                                    <t t-if="ticket.required_date">
                                        <div class="col-md-6">
                                            <label class="text-muted small">Required By</label>
                                            <p class="mb-0">
                                                <i class="fa fa-clock-o me-1"></i>
                                                <t t-esc="ticket.required_date.strftime('%Y-%m-%d')"/>
                                            </p>
                                        </div>
                                    </t>
                                    <div class="col-12">
                                        <label class="text-muted small">Description</label>
                                        <div class="border rounded p-3 bg-light">
                                            <t t-raw="ticket.description"/>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Rejection Reason (if rejected) -->
                        <t t-if="ticket.state == 'rejected'">
                            <div class="card border-danger shadow-sm mb-4">
                                <div class="card-header bg-danger text-white">
                                    <h5 class="mb-0">
                                        <i class="fa fa-times-circle me-2"></i>
                                        Rejection Reason
                                    </h5>
                                </div>
                                <div class="card-body">
                                    <p class="mb-2">
                                        <strong>Rejected by:</strong>
                                        <t t-esc="ticket.rejected_by_id.name"/>
                                    </p>
                                    <p class="mb-2">
                                        <strong>Date:</strong>
                                        <t t-esc="ticket.rejected_date.strftime('%Y-%m-%d %H:%M')"/>
                                    </p>
                                    <p class="mb-0">
                                        <strong>Reason:</strong><br/>
                                        <t t-esc="ticket.rejection_reason"/>
                                    </p>
                                </div>
                            </div>
                        </t>
                    </div>

                    <!-- Sidebar -->
                    <div class="col-lg-4">
                        <!-- Status Timeline -->
                        <div class="card border-0 shadow-sm mb-4">
                            <div class="card-header bg-transparent border-0">
                                <h5 class="mb-0">
                                    <i class="fa fa-tasks text-success me-2"></i>
                                    Status Timeline
                                </h5>
                            </div>
                            <div class="card-body">
                                <div class="timeline">
                                    <!-- Draft -->
                                    <div class="timeline-item">
                                        <i class="fa fa-circle text-secondary"></i>
                                        <span class="text-muted">Draft Created</span>
                                    </div>

                                    <!-- Line Manager Approval -->
                                    <div t-attf-class="timeline-item #{ticket.state in ['manager_approval','it_approval','assigned','in_progress','done'] and 'active' or ''}">
                                        <i t-attf-class="fa fa-circle #{ticket.manager_approval_date and 'text-success' or 'text-muted'}"></i>
                                        <span>Line Manager</span>
                                        <t t-if="ticket.manager_approval_date">
                                            <br/>
                                            <small class="text-success">
                                                <i class="fa fa-check"></i>
                                                <t t-esc="ticket.manager_approval_date.strftime('%Y-%m-%d')"/>
                                            </small>
                                        </t>
                                    </div>

                                    <!-- IT Manager Approval -->
                                    <div t-attf-class="timeline-item #{ticket.state in ['it_approval','assigned','in_progress','done'] and 'active' or ''}">
                                        <i t-attf-class="fa fa-circle #{ticket.it_approval_date and 'text-success' or 'text-muted'}"></i>
                                        <span>IT Manager</span>
                                        <t t-if="ticket.it_approval_date">
                                            <br/>
                                            <small class="text-success">
                                                <i class="fa fa-check"></i>
                                                <t t-esc="ticket.it_approval_date.strftime('%Y-%m-%d')"/>
                                            </small>
                                        </t>
                                    </div>

                                    <!-- IT Team -->
                                    <div t-attf-class="timeline-item #{ticket.state in ['assigned','in_progress','done'] and 'active' or ''}">
                                        <i t-attf-class="fa fa-circle #{ticket.state in ['in_progress','done'] and 'text-info' or 'text-muted'}"></i>
                                        <span>IT Team Working</span>
                                    </div>

                                    <!-- Done -->
                                    <div t-attf-class="timeline-item #{ticket.state == 'done' and 'active' or ''}">
                                        <i t-attf-class="fa fa-circle #{ticket.done_date and 'text-success' or 'text-muted'}"></i>
                                        <span>Completed</span>
                                        <t t-if="ticket.done_date">
                                            <br/>
                                            <small class="text-success">
                                                <i class="fa fa-check"></i>
                                                <t t-esc="ticket.done_date.strftime('%Y-%m-%d')"/>
                                            </small>
                                        </t>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Assignees -->
                        <div class="card border-0 shadow-sm">
                            <div class="card-header bg-transparent border-0">
                                <h5 class="mb-0">
                                    <i class="fa fa-users text-info me-2"></i>
                                    Assigned To
                                </h5>
                            </div>
                            <div class="card-body">
                                <t t-if="ticket.line_manager_id">
                                    <p class="mb-2">
                                        <strong>Line Manager:</strong><br/>
                                        <i class="fa fa-user me-1"></i>
                                        <t t-esc="ticket.line_manager_id.name"/>
                                    </p>
                                </t>
                                <t t-if="ticket.it_manager_id">
                                    <p class="mb-2">
                                        <strong>IT Manager:</strong><br/>
                                        <i class="fa fa-user me-1"></i>
                                        <t t-esc="ticket.it_manager_id.name"/>
                                    </p>
                                </t>
                                <t t-if="ticket.assigned_to_id">
                                    <p class="mb-0">
                                        <strong>IT Team Member:</strong><br/>
                                        <i class="fa fa-user me-1"></i>
                                        <t t-esc="ticket.assigned_to_id.name"/>
                                    </p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Back Button -->
                <div class="text-center mt-4">
                    <a href="/my/tickets" class="btn btn-outline-secondary">
                        <i class="fa fa-arrow-left"></i> Back to My Tickets
                    </a>
                </div>

            </div>

            <!-- Timeline CSS -->
            <style>
                .timeline {
                    position: relative;
                    padding-left: 30px;
                }
                .timeline-item {
                    position: relative;
                    padding-bottom: 20px;
                }
                .timeline-item:not(:last-child)::before {
                    content: '';
                    position: absolute;
                    left: -23px;
                    top: 10px;
                    height: 100%;
                    width: 2px;
                    background: #e0e0e0;
                }
                .timeline-item i {
                    position: absolute;
                    left: -28px;
                    top: 2px;
                }
                .timeline-item.active {
                    font-weight: 600;
                }
            </style>
        </t>
    </template>

</odoo>