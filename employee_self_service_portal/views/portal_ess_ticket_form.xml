<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- IT Ticket Creation Form - ESS Portal -->
    <template id="portal_ess_ticket_form" name="ESS - Create IT Ticket">
        <t t-call="portal.portal_layout">
            <div class="o_portal container my-4">

                <!-- Breadcrumb -->
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a href="/my/ess"><i class="fa fa-tachometer"></i> Dashboard</a>
                        </li>
                        <li class="breadcrumb-item active">Create IT Ticket</li>
                    </ol>
                </nav>

                <!-- Header -->
                <div class="row align-items-center mb-4">
                    <div class="col-md-8">
                        <h2 class="mb-1">
                            <i class="fa fa-ticket text-danger me-2"></i>
                            Create IT Support Ticket
                        </h2>
                        <p class="text-muted mb-0">
                            Submit a new IT support request. Our team will review and respond shortly.
                        </p>
                    </div>
                    <div class="col-md-4 text-end">
                        <a href="/my/tickets" class="btn btn-outline-secondary btn-sm">
                            <i class="fa fa-list"></i> View My Tickets
                        </a>
                    </div>
                </div>

                <!-- Error Message -->
                <t t-if="error">
                    <div class="alert alert-danger alert-dismissible fade show mb-4" role="alert">
                        <i class="fa fa-exclamation-triangle me-2"></i>
                        <t t-if="error_msg">
                            <t t-esc="error_msg"/>
                        </t>
                        <t t-else="">
                            Failed to create ticket. Please check the form and try again.
                        </t>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                </t>

                <!-- Ticket Form Card -->
                <div class="card border-0 shadow-sm">
                    <div class="card-header bg-danger text-white py-3">
                        <h5 class="mb-0">
                            <i class="fa fa-plus-circle me-2"></i>
                            New IT Support Request
                        </h5>
                    </div>
                    <div class="card-body p-4">

                        <form action="/my/ess/tickets/submit" method="POST">
                            <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>

                            <div class="row g-3">

                                <!-- Ticket Type -->
                                <div class="col-md-6">
                                    <label for="ticket_type" class="form-label fw-bold">
                                        Ticket Type <span class="text-danger">*</span>
                                    </label>
                                    <select name="ticket_type" id="ticket_type" class="form-select" required="required">
                                        <option value="">-- Select Issue Type --</option>
                                        <option value="hardware">üñ•Ô∏è Hardware Issue</option>
                                        <option value="software">üíª Software Issue</option>
                                        <option value="social_media">üì± Social Media Access</option>
                                        <option value="network">üåê Network Issue</option>
                                        <option value="other">üìã Other</option>
                                    </select>
                                </div>

                                <!-- Priority -->
                                <div class="col-md-6">
                                    <label for="priority" class="form-label fw-bold">
                                        Priority <span class="text-danger">*</span>
                                    </label>
                                    <select name="priority" id="priority" class="form-select" required="required">
                                        <option value="0">üü¢ Low</option>
                                        <option value="1" selected="selected">üîµ Normal</option>
                                        <option value="2">üü† High</option>
                                        <option value="3">üî¥ Urgent</option>
                                    </select>
                                </div>

                                <!-- Subject -->
                                <div class="col-12">
                                    <label for="subject" class="form-label fw-bold">
                                        Subject <span class="text-danger">*</span>
                                    </label>
                                    <input type="text"
                                           name="subject"
                                           id="subject"
                                           class="form-control"
                                           placeholder="Brief description of the issue (e.g. Cannot access email)"
                                           required="required"
                                           maxlength="200"/>
                                    <div class="form-text">Keep it short and clear.</div>
                                </div>

                                <!-- Description -->
                                <div class="col-12">
                                    <label for="description" class="form-label fw-bold">
                                        Description <span class="text-danger">*</span>
                                    </label>
                                    <textarea name="description"
                                              id="description"
                                              class="form-control"
                                              rows="5"
                                              placeholder="Describe the issue in detail:&#10;- What happened?&#10;- When did it start?&#10;- What steps did you try?"
                                              required="required"></textarea>
                                    <div class="form-text">Please provide as much detail as possible.</div>
                                </div>

                                <!-- Required By Date -->
                                <div class="col-md-6">
                                    <label for="required_date" class="form-label fw-bold">
                                        Required By Date
                                        <span class="text-muted fw-normal">(Optional)</span>
                                    </label>
                                    <input type="date"
                                           name="required_date"
                                           id="required_date"
                                           class="form-control"/>
                                    <div class="form-text">Leave blank if not time-sensitive.</div>
                                </div>

                                <!-- Employee Info (read-only display) -->
                                <div class="col-md-6">
                                    <label class="form-label fw-bold">Submitted By</label>
                                    <div class="form-control bg-light" style="cursor: not-allowed;">
                                        <i class="fa fa-user text-muted me-2"></i>
                                        <t t-esc="employee.name"/>
                                        <small class="text-muted ms-2">(<t t-esc="employee.job_id.name or 'Employee'"/>)</small>
                                    </div>
                                </div>

                                <!-- Submit Buttons -->
                                <div class="col-12 pt-2">
                                    <hr class="my-3"/>
                                    <div class="d-flex gap-3">
                                        <button type="submit" class="btn btn-danger btn-lg px-4">
                                            <i class="fa fa-paper-plane me-2"></i>
                                            Submit Ticket
                                        </button>
                                        <a href="/my/ess" class="btn btn-outline-secondary btn-lg px-4">
                                            <i class="fa fa-times me-2"></i>
                                            Cancel
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </form>

                    </div>
                </div>

                <!-- Info Box -->
                <div class="card border-0 bg-light mt-4">
                    <div class="card-body p-3">
                        <h6 class="text-muted mb-2">
                            <i class="fa fa-info-circle me-1"></i> What happens next?
                        </h6>
                        <div class="row text-center">
                            <div class="col-md-3 mb-2">
                                <div class="p-2">
                                    <i class="fa fa-check-circle text-success fa-lg mb-1"></i>
                                    <div class="small">1. You submit ticket</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-2">
                                <div class="p-2">
                                    <i class="fa fa-user text-primary fa-lg mb-1"></i>
                                    <div class="small">2. Line manager reviews</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-2">
                                <div class="p-2">
                                    <i class="fa fa-cog text-warning fa-lg mb-1"></i>
                                    <div class="small">3. IT manager approves</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-2">
                                <div class="p-2">
                                    <i class="fa fa-wrench text-danger fa-lg mb-1"></i>
                                    <div class="small">4. IT team resolves</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </t>
    </template>

</odoo>