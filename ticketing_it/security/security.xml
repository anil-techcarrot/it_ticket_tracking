<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Security Groups -->
    <record id="group_it_manager" model="res.groups">
        <field name="name">IT Manager</field>
    </record>

    <record id="group_it_team" model="res.groups">
        <field name="name">IT Support Team</field>
    </record>

    <!-- Record Rules -->
    <!-- Portal users see only their tickets -->
    <record id="rule_it_ticket_portal" model="ir.rule">
        <field name="name">Portal: Own Tickets Only</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[('employee_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_portal'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="True"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- Managers see direct reports' tickets -->
    <record id="rule_it_ticket_manager" model="ir.rule">
        <field name="name">Manager: Direct Reports Tickets</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[('employee_id.parent_id.user_id', '=', user.id)]</field>
        <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>

    <!-- IT Team sees all tickets -->
    <record id="rule_it_ticket_it_team" model="ir.rule">
        <field name="name">IT Team: All Tickets</field>
        <field name="model_id" ref="model_it_ticket"/>
        <field name="domain_force">[(1, '=', 1)]</field>
        <field name="groups" eval="[(4, ref('group_it_team'))]"/>
        <field name="perm_read" eval="True"/>
        <field name="perm_write" eval="True"/>
        <field name="perm_create" eval="False"/>
        <field name="perm_unlink" eval="False"/>
    </record>
</odoo>